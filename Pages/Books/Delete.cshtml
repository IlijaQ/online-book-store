@page
@model Online_Book_Store.Pages.Books.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
<div class="jumbotron p-0 d-flex justify-content-between">
    <h1 class="display-4 text-danger">Delete</h1>
    <h2 class="display-4 text-white">Are you sure you want to delete this?</h2>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>
        <dt class="col-sm-2">
            Authors
        </dt>
        <dd class="col-sm-10">
            @{ string Authors = " ";
                Authors = String.Join(", ", Model.Book.BookAuthor.Select(m => m.Author.Name));
            }
            <span>@Authors</span>
        </dd>
    </dl>
</div>

<hr />

<div class="d-flex justify-content-between">
    <div>
        <form method="post">
            <input type="hidden" asp-for="Book.ID" />
            <input type="submit" value="YES, I am totally sure. Delete it. DELETE IT!!!" class="btn btn-outline-danger" />
        </form>
    </div>
    <div>
        <a asp-page="./Index" class="btn btn-primary bg-warning">Back to List</a>
    </div>
</div>