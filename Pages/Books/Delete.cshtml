@page
@model Online_Book_Store.Pages.Books.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>
        <dt class="col-sm-2">
            Authors
        </dt>
        <dd class="col-sm-10">
            @{ string Authors = " ";
                Authors = String.Join(", ", Model.Book.BookAuthor.Select(m => m.Author.Name));
            }
            <span>@Authors</span>
        </dd>

    </dl>

    <form method="post">
        <input type="hidden" asp-for="Book.ID" />
        <input type="submit" value="YES, I am totally sure. Delete it. DELETE IT!!!" class="btn btn-outline-danger" />
    </form>
    <a asp-page="./Index">Back to List</a>


    
</div>
