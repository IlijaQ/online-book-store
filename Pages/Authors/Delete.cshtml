@page
@model Online_Book_Store.Pages.Authors.DeleteModel

@{
    ViewData["Title"] = "Delete";
    string Date = Model.Author.Born.ToString("dd.MM.yyyy");
}

<div class="jumbotron p-2">
    <h1 class="display-4"><span class="text-danger">Remove </span><span class="text-secondary">@Model.Author.Name</span></h1>
</div>

<div>
    <dl >
        <dt>
            @Html.DisplayNameFor(model => model.Author.ID)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Author.ID)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Author.Born)
        </dt>
        <dd>
            @Date
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Author.Colledge)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Author.Colledge)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Author.University)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Author.University)
        </dd>
        @if (Model.Author.Email != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.Author.Email)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Author.Email)
            </dd>
        }
    </dl>
</div>

<hr />

<div class="d-flex justify-content-between">
    <div>
        <form method="post">
            <input type="hidden" asp-for="Author.ID" />
            <input type="submit" value="YEP" class="btn btn-outline-danger" />
        </form>
    </div>
    <div>
        <a asp-page="./Index" class="btn btn-warning">Back to List</a>
    </div>
</div>
